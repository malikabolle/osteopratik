{
  "exclude": [
    "node_modules",
    "tsconfig.json",
    "package.json",
    "index.js"
  ],
  "compileOnSave": true,
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "",
    "lib": [
      "es2015"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/"
    ]
  }
}
